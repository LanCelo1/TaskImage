<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_nav"
    app:startDestination="@id/mainScreen">

    <fragment
        android:id="@+id/mainScreen"
        android:name="com.example.taskapp.presentation.ui.screen.MainScreen"
        android:label="MainScreen" >
        <action
            android:id="@+id/action_mainScreen_to_settingScreen"
            app:destination="@id/settingScreen" />
    </fragment>
    <fragment
        android:id="@+id/settingScreen"
        android:name="com.example.taskapp.presentation.ui.screen.SettingScreen"
        android:label="SettingScreen" />
</navigation>